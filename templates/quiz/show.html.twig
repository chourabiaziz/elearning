{% extends 'base.html.twig' %}

{% block title %}Quiz{% endblock %}

{% block body %}
    <h1>Quiz</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quiz.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ quiz.image }}</td>
            </tr>
            <tr>
                <th>Incorrect1</th>
                <td>{{ quiz.incorrect1 }}</td>
            </tr>
            <tr>
                <th>Incorrect2</th>
                <td>{{ quiz.incorrect2 }}</td>
            </tr>
            <tr>
                <th>Correct</th>
                <td>{{ quiz.correct }}</td>
            </tr>
            <tr>
                <th>Reponse</th>
                <td>{{ quiz.reponse ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_quiz_index') }}">back to list</a>

    <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}">edit</a>

    {{ include('quiz/_delete_form.html.twig') }}
{% endblock %}
