{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<style>
    .backred {
        background-color: rgba(255, 0, 0, 0.099);
    }

    .backgreen {
        background-color: rgba(47, 136, 42, 0.099);
    }
</style>

<div {% if form.vars.value.id %}hidden{% endif %}>

<!-- <div {% if app.request.attributes.get('_route')=='app_flashcard_edit' %} hidden {% endif %}> -->
    <div class="mb-3">
        {{ form_label(form.image) }} <span class="text-danger">*</span>
        {{ form_widget(form.image, { 'attr': {'class': 'form-control'} }) }}
        <span class="text-danger">{{ form_errors(form.image) }}</span>

    </div>
</div>

<div class="mb-3">
    <span class="text-danger"> {{ form_label(form.incorrect1, 'Incorrect ') }}</span> <span class="text-danger">*</span>
    {{ form_widget(form.incorrect1, { 'attr': {'class': 'form-control backred', 'placeholder': 'Entrez la réponse incorrecte 1'} }) }}
    <span class="text-danger"> {{ form_errors(form.incorrect1) }}</span>
</div>

<div class="mb-3">
    <span class="text-danger"> {{ form_label(form.incorrect2, 'Incorrect ') }}</span> <span class="text-danger">*</span>
    {{ form_widget(form.incorrect2, { 'attr': {'class': 'form-control backred', 'placeholder': 'Entrez la réponse incorrecte 2'} }) }}
    <span class="text-danger">{{ form_errors(form.incorrect2) }}</span>
</div>

<div class="mb-3">
    <span class="text-success">{{ form_label(form.correct, 'Correct ') }}</span> <span class="text-danger">*</span>
    {{ form_widget(form.correct, { 'attr': {'class': 'form-control backgreen ', 'placeholder': 'Entrez la réponse correcte'} }) }}
    <span class="text-danger">{{ form_errors(form.correct) }}</span>
</div>



<div class="text-center">
    <button class="btn pl-3 pr-3 " style="background-color: midnightblue;">{{ button_label|default('') }}

        <svg style="color: rgb(243, 243, 243);" xmlns="http://www.w3.org/2000/svg" width="22" height="22"
            fill="currentColor" class="bi bi-send-check-fill" viewBox="0 0 16 16">
            <path
                d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855H.766l-.452.18a.5.5 0 0 0-.082.887l.41.26.001.002 4.995 3.178 1.59 2.498C8 14 8 13 8 12.5a4.5 4.5 0 0 1 5.026-4.47zm-1.833 1.89L6.637 10.07l-.215-.338a.5.5 0 0 0-.154-.154l-.338-.215 7.494-7.494 1.178-.471z" />
            <path
                d="M16 12.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0m-1.993-1.679a.5.5 0 0 0-.686.172l-1.17 1.95-.547-.547a.5.5 0 0 0-.708.708l.774.773a.75.75 0 0 0 1.174-.144l1.335-2.226a.5.5 0 0 0-.172-.686" />
        </svg>
    </button>
</div>
{{ form_end(form) }}