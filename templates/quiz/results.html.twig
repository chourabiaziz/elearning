{% extends 'base.html.twig' %}

{% block title %}Quiz Results - {{ formation.titre }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">formation Results</h1>
        <h2 class="text-center">{{ formation.titre }}</h2>

        <div class="mt-4">
            <h3 class="text-center">Your Score: {{ score }} / {{ total }}</h3>
        </div>

        <div class="mt-5">
            <h3 class="text-center">Detailed Results:</h3>
            <div class="row">
                {% for flashcardId, result in correct_answers %}
                    <div class="col-md-4 mb-3">
                        <div class="card {% if result.is_correct %}bg-success text-white{% else %}bg-danger text-white{% endif %} border-0 rounded shadow-sm">
                            <div class="card-body text-center">
                                <h5 class="card-title">{{ result.quiz.correct }}</h5>
                                <p class="card-text">
                                    {% if result.is_correct %}
                                        <i class="fas fa-check-circle"></i> Correct
                                    {% else %}
                                        <i class="fas fa-times-circle"></i> Incorrect
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="text-center" > <a href="/formation"  class="btn btn-secondary">retouner vers home </a>
</div>

{% endblock %}