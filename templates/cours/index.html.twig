{% extends 'admin_base.html.twig' %}
{% block title %}Liste des cours{% endblock %}

{% block body %}
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f4f6f9; /* Gris clair pour l'arri√®re-plan */
        color: #333;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 95%;
        margin: 50px auto;
        background: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        color: #1e40af  !important;
        margin-bottom: 25px;
        font-size: 28px;
        font-weight: bold;
    }

    #searchBar {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 6px;
        border: 1px solid #ddd;
        font-size: 16px;
        color: black !important;
        background-color: white !important;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        background: #ffffff;
    }

    thead {
        background-color: #1e40af ;
        color: white;
    }

    th, td {
        padding: 15px;
        text-align: center;
        border-bottom: 1px solid #ddd;
        color: black !important;
    }

    thead th {
        cursor: pointer;
        color: white !important;
    }

    tbody tr:hover {
        background-color: #e3f2fd; /* Survol */
    }
    tbody tr:nth-child(even) {
        background-color: #f8f9fa; /* Alternance de couleurs */
    }

    img {
        border-radius: 6px;
        border: 2px solidrgb(237, 238, 243);
        width: 80px;
        height: auto;
    }

    .btn-container {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .btn {
        padding: 10px 14px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s ease-in-out;
        text-align: center;
    }

    /* ‚úÖ Bouton Modifier */
    .btn-edit {
        background-color: white;
        color: #f59e0b; /* Orange */
        border: 2px solid #f59e0b; /* Contour orange */
    }

    .btn-edit:hover {
        background-color: #f59e0b; /* Fond orange au survol */
        color: white;
    }

    /* ‚úÖ Bouton Supprimer */
    .btn-delete {
    background-color: white;
    color: #dc2626; /* Rouge */
    border: 2px solid #dc2626; /* Contour rouge */
}

   .btn-delete:hover {
    background-color: #dc2626; /* Fond rouge au survol */
    color: white;
}

    .btn-add {
        display: block;
        width: fit-content;
        margin: 20px auto;
        background-color: #1e40af !important;
        color: white !important;
        padding: 12px 18px;
        border-radius: 6px;
        font-weight: bold;
    }

    .btn-add:hover {
        background-color: #1e40af !important;
    }

    /* ‚úÖ Modal pour la vid√©o */
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.4);
        padding-top: 60px;
    }

    .modal-content {
        background-color: #fff;
        margin: 5% auto;
        padding: 20px;
        border-radius: 12px;
        width: 80%;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }

    /* Style du bouton retour */
    .btn-back {
        background-color: #1e40af;
        color: white;
        padding: 12px 18px;
        border-radius: 6px;
        font-weight: bold;
        text-decoration: none;
        display: inline-block;
        margin-top: 15px;
    }

    .btn-back:hover {
        background-color: #1e3a8a;
    }
</style>

<div class="container">
    <h1>üìö Liste des Cours</h1>
    
    <!-- üîç Barre de recherche -->
    <input type="text" id="searchBar" placeholder="üîç Rechercher une cat√©gorie..." onkeyup="searchCategory()">

    <table id="coursTable">
        <thead>
            <tr>
            
    
                <th onclick="sortTable(0)">üìñ Titre ‚¨ç</th>
                <th onclick="sortTable(0)">üìùContenu ‚¨ç</th>
                <th onclick="sortTable(2)">üìÖ Date de publication ‚¨ç</th>

                <th>üñºÔ∏è Image</th>
                <th>üé¨ Vid√©o</th>
                <th>üìÇ Cat√©gorie</th>
                <th>‚öôÔ∏è Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for cours in cours %}
                <tr>
                    <td>{{ cours.titre }}</td>
                    <td>{{ cours.contenu }}</td>
                    <td>{{ cours.dateCreated|date('d/m/Y') }}</td>
                    <td>
                        {% if cours.image %}
                            <img src="{{ asset('image/' ~ cours.image) }}" alt="Image du cours">
                        {% else %}
                            <span style="color: #888;">Aucune image</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if cours.video %}
                            <a href="#" class="btn-view-video" data-video="{{ asset('video/' ~ cours.video) }}">Voir la vid√©o üé•</a>
                        {% else %}
                            <span style="color: #888;">Aucune vid√©o</span>
                        {% endif %}
                    </td>
                    <td>{{ cours.categorie.nom }}</td>
                    <td class="btn-container">
                        <a href="{{ path('show_cours', {id: cours.id}) }}" class="btn btn-view">üëÅÔ∏è Voir</a>
                        <a href="{{ path('update_cours', {id: cours.id}) }}" class="btn btn-edit">üìù Modifier </a>
                        <a href="{{ path('delete_cours', {id: cours.id}) }}" class="btn btn-delete" onclick="return confirm('Voulez-vous vraiment supprimer ce cours ?');">‚ùå Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" style="text-align: center; padding: 20px; font-weight: bold; color: #555;">Aucun cours disponible</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ajouter_cours') }}" class="btn btn-add">‚ûï Ajouter un cours</a>
</div>

<!-- ‚úÖ Modal pour la vid√©o -->
<div id="videoModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <video id="modalVideo" controls style="width: 100%; height: auto;">
            <!-- La vid√©o sera ins√©r√©e ici par JavaScript -->
        </video>
        <br>
    </div>
</div>

<!-- ‚úÖ Script pour ouvrir/fermer le modal et charger la vid√©o -->
<script>


    function sortTable(n) {
        let table = document.getElementById("coursTable");
        let rows = Array.from(table.querySelectorAll("tbody tr"));
        let asc = table.dataset.order === "asc";
        table.dataset.order = asc ? "desc" : "asc";

        rows.sort((rowA, rowB) => {
            let cellA = rowA.cells[n].textContent.trim().toLowerCase();
            let cellB = rowB.cells[n].textContent.trim().toLowerCase();

            if (!isNaN(cellA) && !isNaN(cellB)) {
                return asc ? cellA - cellB : cellB - cellA;
            }

            return asc ? cellA.localeCompare(cellB) : cellB.localeCompare(cellA);
        });

        rows.forEach(row => table.querySelector("tbody").appendChild(row));
    }

    document.addEventListener("DOMContentLoaded", function () {
        let modal = document.getElementById("videoModal");
        let closeBtn = document.querySelector(".close");
        let videoElement = document.getElementById("modalVideo");

        // Quand l'utilisateur clique sur "Voir la vid√©o", ouvrir le modal
        document.querySelectorAll(".btn-view-video").forEach(function (button) {
            button.addEventListener("click", function (e) {
                e.preventDefault();
                let videoUrl = this.getAttribute("data-video");
                videoElement.src = videoUrl;
                modal.style.display = "block";
            });
        });

        // Fermer le modal quand l'utilisateur clique sur la croix
        closeBtn.addEventListener("click", function () {
            modal.style.display = "none";
            videoElement.src = "";  // Arr√™ter la vid√©o
        });

        // Fermer le modal si l'utilisateur clique en dehors du modal
        window.onclick = function (event) {
            if (event.target === modal) {
                modal.style.display = "none";
                videoElement.src = "";  // Arr√™ter la vid√©o
            }
        };
    });

    // Fonction de recherche (reste inchang√©e)
    function searchCategory() {
        let input = document.getElementById("searchBar");
        let filter = input.value.toLowerCase();
        let table = document.getElementById("coursTable");
        let trs = table.getElementsByTagName("tr");

        for (let i = 1; i < trs.length; i++) {
            let tds = trs[i].getElementsByTagName("td");
            let categorie = tds[5].textContent.toLowerCase();
            if (categorie.indexOf(filter) > -1) {
                trs[i].style.display = "";
            } else {
                trs[i].style.display = "none";
            }
        }
    }
</script>

{% endblock %}


