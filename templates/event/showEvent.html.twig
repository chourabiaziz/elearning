

{% extends 'admin_base.html.twig' %}

 

{% block stylesheets %}
    <style>
        /* Styles g√©n√©raux */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f6f9; /* Gris clair pour l'arri√®re-plan */
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 95%;
            margin: 50px auto;
            background: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #1e3a8a; /* Bleu √©ducatif */
            margin-bottom: 25px;
            font-size: 28px;
            font-weight: bold;
        }

        /* Table */
        table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            background: #ffffff;
        }

        thead {
            background-color: #1e3a8a; /* Bleu fonc√© */
            color: white;
        }

        th, td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        tbody tr:nth-child(even) {
            background-color: #f8f9fa; /* Alternance de couleurs */
        }

        tbody tr:hover {
            background-color: #e3f2fd; /* Survol */
        }

        /* Images */
        img {
            border-radius: 6px;
            border: 2px solid #1e3a8a;
            width: 80px;
            height: auto;
        }

        /* Boutons */
        .btn-container {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .btn {
            padding: 10px 14px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            transition: 0.3s ease-in-out;
            text-align: center;
        }

        .btn-edit {
            background-color: #f59e0b; /* Orange */
            color: white;
        }

        .btn-edit:hover {
            background-color: #d97706;
        }

        .btn-delete {
            background-color: #dc2626; /* Rouge */
            color: white;
        }

        .btn-delete:hover {
            background-color: #b91c1c;
        }

        .btn-add {
            display: block;
            width: fit-content;
            margin: 20px auto;
            background-color: #2563eb; /* Bleu vif */
            color: white;
            padding: 12px 18px;
            border-radius: 6px;
            font-weight: bold;
        }

        .btn-add:hover {
            background-color: #1e40af;
        }

        /* Responsive */
        @media (max-width: 768px) {
            th, td {
                padding: 10px;
            }
            
            img {
                width: 60px;
            }

            .btn {
                font-size: 12px;
                padding: 8px 10px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>üìÖ Liste des √âv√©nements</h1>

        <table>
            <thead>
                <tr>
                    <th>üìñ Nom</th>
                    <th>üìÜ Date</th>
                    <th>üìç Lieu</th>
                    <th>üë• Seuil</th>
                    <th>üñºÔ∏è Image</th>
                    <th>‚öôÔ∏è Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for event in event_liste %}
                    <tr>
                        <td>{{ event.nom }}</td>
                        <td>{{ event.dateEvent|date('d/m/Y') }}</td>
                        <td>{{ event.lieu }}</td>
                        <td>{{ event.seuil }}</td>
                        <td>
                            {% if event.imageE %}
                                <img src="{{ asset('image/' ~ event.imageE) }}" alt="Image de l'√©v√©nement">
